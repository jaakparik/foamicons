{
  "name": "foamicons-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Foamicons monorepo - React library, Figma plugin, and website",
  "scripts": {
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@foamicons/core",
    "build:foamicons": "turbo run build --filter=foamicons",
    "build:website": "turbo run build --filter=@foamicons/website",
    "build:website:cf": "cd packages/website && npm run build",
    "build:figma": "turbo run build --filter=@foamicons/figma-plugin",
    "dev": "turbo run dev",
    "dev:website": "turbo run dev --filter=@foamicons/website",
    "dev:figma": "turbo run dev --filter=@foamicons/figma-plugin",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "release": "node scripts/release.mjs",
    "add-aliases": "node scripts/add-aliases.mjs"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
